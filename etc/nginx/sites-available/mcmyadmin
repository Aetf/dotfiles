server {
	listen 80;
    listen [::]:80;
	server_name mc.unlimitedcodeworks.xyz mc.unlimited-code.works;

	return 301 https://$host$request_uri;
}

server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;
	server_name mc.unlimitedcodeworks.xyz mc.unlimited-code.works;

	access_log /var/log/nginx/sites/mcmyadmin.access netdata;
	error_log /var/log/nginx/sites/mcmyadmin.error error;

	root /var/websites/fallback;
	location /robots.txt {
	}

	location / {
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;

		proxy_pass http://localhost:8081;
	}
}
