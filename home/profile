# IME settings
export QT_IM_MOULDE=fcitx
export GTK_IM_MODULE=fcitx

# Default editor
export EDITOR=vim
export VISUAL=$EDITOR

# Used for virtualbox
export VBOX_USB=usbfs

# Predefined variables to Java runtime
#export _JAVA_OPTIONS="-Dawt.useSystemAAFontSettings=on -Dswing.aatext=true"

# Ccache directory
export CCACHE_DIR=$HOME/.cache/ccache
export CCACHE_COMPRESS

# CUDA directory
export CUDA_DIR=/opt/cuda
export CUDA_HOME=$CUDA_DIR

# XDG variables
export XDG_CONFIG_HOME="$HOME/.config"

# Jupyter lab app dir
export JUPYTERLAB_DIR=$HOME/.jupyter/lab/app

# More PATH
## Prepend user's bin directory to PATH
PATH="$HOME/customizations/scripts:$PATH"
## Local bin directory
PATH="$HOME/.local/bin:$PATH"
## Node.js executable
if [ -d $HOME/.node_modules/bin ]; then
    PATH="$PATH:$HOME/.node_modules/bin"
fi
## ruby gem executable
for p in ~/.gem/ruby/*/bin; do
    if [[ -d $p ]]; then
        PATH="$PATH:$p"
    fi
done
## rust cargo executable
if [ -d $HOME/.cargo/bin ]; then
    PATH="$PATH:$HOME/.cargo/bin"
fi
## Python poetry executable
if [ -d $HOME/.poetry/bin ]; then
    PATH="$PATH:$HOME/.poetry/bin"
fi

export PATH
